    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}
