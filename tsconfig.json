{
    "compilerOptions": {
        "target": "es2022",
        "module": "preserve",
        "lib": ["es2022", "dom", "dom.iterable"],
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "noImplicitOverride": true,
        "noEmit": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "src/**/*.ts"
    ]
}
